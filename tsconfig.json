{
    "compileOnSave": false,
    "compilerOptions": {
      "lib": [
        "dom",
        "dom.iterable",
        "es2015",
        "es2015.symbol.wellknown",
        "es2015.collection",
        "es2015.reflect",
        "es2016.array.include",
        "es2017.object",
        "es2017.string",
        "es2018.promise"
      ],
      "outDir": "dist",
      "resolveJsonModule": true,
      "moduleResolution": "node",
      "jsx": "react",
      "module": "commonjs",
      "preserveConstEnums": true,
      "sourceMap": true,
      "target": "es6",
      "noEmitOnError": true,
      "experimentalDecorators": true,
      "forceConsistentCasingInFileNames": true,
      "downlevelIteration": true,
      "baseUrl": "./src",
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true
    },
    "exclude": [ "**/*.test.ts", "bin", "obj", "Tools", "BuildTools", "node_modules", "webpack.config.js" ]
  } 